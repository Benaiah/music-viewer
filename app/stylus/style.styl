*
  box-sizing: border-box

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both
    
body
  line-height: 1.4
  font-family: 'Charter'

pre
  font-family: 'Source Code Pro'
    
.song-list
  position: fixed
  list-style: none
  padding: 1em
  width: 20%
  left: 0
  top: 0
  bottom: 0
  background: #222
  color: #eee
  margin: 0
  padding-bottom: 1em
  padding-top: 1em
  li.selected
    font-weight: bold
  a
    color: #eee
    text-decoration: none

.selected-song
  position: fixed
  width: 80%
  right: 0
  top: 0
  bottom: 0
  background: #eee
  color: #222
  padding-left: 1em
  padding-right: 1em
  overflow-y: scroll
.selected-song_chords
  list-style: none
  padding: 0
  clearfix()
  li
    float: left
    margin-right: 1em